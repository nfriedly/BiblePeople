<h2>New person</h2>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <p>
     <label>Name</label> <br />
     <input type="text" size="30" name="name[name]" value="<%= params[:name] || "" %>" />
  </p>
  <p>
    <%= f.label :father_id %><br />
    <%= f.text_field :father_id %>
  </p>
  <p>
    <%= f.label :mother_id %><br />
    <%= f.text_field :mother_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', people_path %>