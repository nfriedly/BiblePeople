<h2>New person</h2>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

<div id="names">
  <p>
     <label>Name</label> <br />
     <input type="text" size="30" id="person_name" name="person[name_attributes][]" value="<%= params[:name] || "" %>" />
  </p>
  <a href="#" class="add">Add</a>
</div>
  
  <p>
     <label>Gender</label> <br />
     <select name="person[gender]" >
        <option value=""></option>
        <option value="m">Male</option>
        <option value="f">Female</option>
    </select>
  </p>
  
  <p>
    <%= f.label :father_id %><br />
    <input id="father_name" name="father_name" size="30" type="text" />
    <%= f.hidden_field :father_id %>
  </p>
  <p>
    <%= f.label :mother_id %><br />
    <input id="mother_name" name="mother_name" size="30" type="text" />
    <%= f.hidden_field :mother_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', people_path %>